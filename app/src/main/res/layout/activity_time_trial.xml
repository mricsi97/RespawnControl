<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/tvPickupTime"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPickupTime"
        android:padding="20dp"
        android:text="Pickup:"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvPickupTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        android:fontFamily="@font/ds_digi"
        android:textColor="@color/colorAccent"
        android:textSize="62sp" />

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:maxHeight="90dp"
        app:layout_constraintStart_toEndOf="@id/tvPickupTime"
        app:layout_constraintBottom_toBottomOf="@id/tvPickupTime"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/tvRespawnTime"
        app:layout_constraintBaseline_toBaselineOf="@id/tvRespawnTime"
        android:padding="20dp"
        android:text="Respawn:"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvRespawnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvPickupTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:fontFamily="@font/ds_digi"
        android:textColor="@color/colorAccent"
        android:textSize="62sp" />

    <EditText
        android:id="@+id/etRespawnTime"
        android:layout_width="72sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvRespawnTime"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRespawnTime"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:inputType="numberDecimal"
        android:fontFamily="@font/ds_digi"
        android:textSize="62sp"/>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>